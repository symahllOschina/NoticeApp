<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white_f3f7fd"
    android:id="@+id/main_home_top_popWindowLayout"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="筛选"
        android:textSize="@dimen/text_size18"
        android:textColor="@color/white_ffffff"
        android:gravity="center"
        android:background="@color/blue_409EFF"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white_f3f7fd"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="支付方式"
                android:textColor="@color/black_333"
                android:textSize="@dimen/text_size14"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                />
            <com.wanding.notice.view.WarpLinearLayout
                android:id="@+id/main_home_topPop_payTypeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:grivate="right"
                app:horizontal_Space="30dp"
                app:vertical_Space="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/white_ffffff"
                ></com.wanding.notice.view.WarpLinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="交易时间"
                android:textColor="@color/black_333"
                android:textSize="@dimen/text_size14"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                />
            <LinearLayout
                android:id="@+id/main_home_topPop_payTimeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/white_ffffff"
                >
                <TextView
                    android:id="@+id/main_home_topPop_startTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textColor="@color/blue_409EFF"
                    android:textSize="@dimen/text_size14"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" — "
                    android:textColor="@color/blue_409EFF"
                    android:textSize="@dimen/text_size14"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/main_home_topPop_endTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textColor="@color/blue_409EFF"
                    android:textSize="@dimen/text_size14"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="交易状态"
                android:textColor="@color/black_333"
                android:textSize="@dimen/text_size14"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                />
            <com.wanding.notice.view.WarpLinearLayout
                android:id="@+id/main_home_topPop_payStateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:grivate="right"
                app:horizontal_Space="30dp"
                app:vertical_Space="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/white_ffffff"
                ></com.wanding.notice.view.WarpLinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/main_home_topPop_tvReset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="重置"
            android:textSize="@dimen/text_size18"
            android:textColor="@color/white_ffffff"
            android:gravity="center"
            android:background="@color/gray_e5e5e5"
            />
        <TextView
            android:id="@+id/main_home_topPop_tvConfirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:textSize="@dimen/text_size18"
            android:textColor="@color/white_ffffff"
            android:gravity="center"
            android:background="@color/blue_409EFF"
            />
    </LinearLayout>
</LinearLayout>
