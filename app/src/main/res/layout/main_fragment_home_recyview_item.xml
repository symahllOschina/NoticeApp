<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/main_home_item_itemView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        >
        <ImageView
            android:id="@+id/main_home_item_imgOrderPayType"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/wxin_log_icon"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            />

        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <TextView 
                    android:id="@+id/main_home_item_tvOrderPayType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信支付收款成功"
                    android:textSize="@dimen/text_size16"
                    android:textColor="@color/black_000000"
                    />
                <TextView 
                    android:id="@+id/main_home_item_tvOrderTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xx月xx日 xx:xx"
                    android:textSize="@dimen/text_siz12"
                    android:textColor="@color/gray_999"
                    android:layout_marginTop="7dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            >
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical|right"
                >
                <TextView 
                    android:id="@+id/main_home_item_tvOrderTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00.00"
                    android:textSize="@dimen/text_size22"
                    android:textColor="@color/black_333"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/more_icon"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            />
    </LinearLayout>

</LinearLayout>
