<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/confrim_hint_dialog_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_f3f7fd"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="60dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/confirm_hint_dialog_tvHintTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="切换账号"
                android:textColor="@color/black_333"
                android:textSize="@dimen/text_size24"
                />

            <TextView
                android:id="@+id/confirm_hint_dialog_tvHintText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="将退出当前账号"
                android:textColor="@color/blue_B0C4DE"
                android:textSize="@dimen/text_size16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/confirm_hint_dialog_tvCancel"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:background="@drawable/bg_gray_frame1dp_radius10"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="取   消"
                android:textColor="@color/white_ffffff"
                android:textSize="@dimen/text_size17" />

            <TextView
                android:id="@+id/confirm_hint_dialog_tvOk"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_blue_frame1dp_radius10"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="确   定"
                android:textColor="@color/white_ffffff"
                android:textSize="@dimen/text_size17" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
