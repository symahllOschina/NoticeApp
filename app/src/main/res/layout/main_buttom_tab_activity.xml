<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    >
    <RelativeLayout
        android:id="@+id/main_buttom_tab_homeLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/main_buttom_tab_homeImg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/main_query_nochecd_icon"
            />
        <TextView
            android:id="@+id/main_buttom_tab_homeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询"
            android:textSize="@dimen/text_size14"
            android:layout_below="@id/main_buttom_tab_homeImg"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/main_buttom_tab_statisLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/main_buttom_tab_statisImg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/main_statis_nochecd_icon"
            />
        <TextView
            android:id="@+id/main_buttom_tab_statisText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="统计"
            android:textSize="@dimen/text_size14"
            android:layout_below="@id/main_buttom_tab_statisImg"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/main_buttom_tab_myLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/main_buttom_tab_myImg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/main_my_nochecd_icon"
            />
        <TextView
            android:id="@+id/main_buttom_tab_myText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textSize="@dimen/text_size14"
            android:layout_below="@id/main_buttom_tab_myImg"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>
</LinearLayout>
